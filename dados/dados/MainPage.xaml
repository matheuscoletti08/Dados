                    <x:String>10</x:String>
                    <x:String>20</x:String>
                    <x:String>100</x:String>
                </x:Array>
                </Picker.ItemsSource>
                </Picker>

                <Button
                x:Name="CounterBtn"
                Text="Click me" 
